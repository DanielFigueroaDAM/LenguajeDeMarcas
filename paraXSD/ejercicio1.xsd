<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="produto">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="nombre">
                    <xs:simpleType>
                        <xs:restriction>
                        <xs:maxLength value="30"></xs:maxLength>
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>
                <xs:element name="precio" type="xs:integer"></xs:element>
                <xs:element name="stock" type="xs:integer" minOccurs="0" maxOccurs="unbounded"></xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>